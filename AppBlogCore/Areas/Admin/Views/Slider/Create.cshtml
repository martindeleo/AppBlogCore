@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Crear Slider";
}

<br />
<br />

<h3 class="text-center  >">Crear un Slider</h3>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <!--Nota : Para subir archivos...sieeeepre si o si desde el formulario meter un enctype-->
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>        <!--Nota: va a mostrar el data anotation-->
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de slider" />
                    <span asp-validation-for="Nombre" class="text-bg-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Estado"></label>        <!--Nota: va a mostrar el data anotation-->
                    </label>
                </div>
                <div class="col-8">
                    <Select asp-for="Estado" class="form-control">
                        <option value="false" selected>Falso</option>
                        <option value="true">Verdadero</option>
                    </Select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="UrlImagen"></label>        <!--Nota: va a mostrar el data anotation-->
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            <div class="form-group row mt-2">
                <!--Nota le meto un mt-2 para darle un margen->
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />        <!--nota: uso la vista parcial-->
            </div>
        </div>
    </div>
</form>
