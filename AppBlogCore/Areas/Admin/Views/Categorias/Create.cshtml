@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}

<br/>
<br />

<h3 class="text-center  >">Crear una nueva categoria</h3>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>        <!--Nota: va a mostrar el data anotation-->
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoria" />
                    <span asp-validation-for="Nombre" class="text-bg-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el nro del orden" />
                    <span asp-validation-for="Orden" class="text-bg-danger"></span>
                </div>
            </div>

            <div class="form-group row">
               <div class="col-8">
                    <partial name="_VistaCrearVolver" />        <!--nota: uso la vista parcial-->
               </div>
            </div>
        </div>
    </div>
</form>